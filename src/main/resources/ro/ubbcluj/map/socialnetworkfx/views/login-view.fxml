<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.6"
            fx:controller="ro.ubbcluj.map.socialnetworkfx.controllers.LoginController">
    <ImageView fx:id="mascotImage" fitHeight="230.0" fitWidth=" 211.0" layoutX="55.0" layoutY="69.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@../images/mascot.jpg"/>
    </ImageView>
    <VBox fx:id="loginBox" layoutX="295.0" layoutY="38.0" prefHeight="293.0" prefWidth="461.0">
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="40.0">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets left="20.0" right="20.0" top="50.0"/>
            </padding>
            <TextField fx:id="emailField" promptText="Email">
                <font>
                    <Font name="JetBrainsMonoNL NFP Regular" size="14.0"/>
                </font>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
                </padding>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Password">
                <font>
                    <Font name="JetBrainsMonoNL NFP Regular" size="14.0"/>
                </font>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
                </padding>
            </PasswordField>
            <CheckBox fx:id="showPasswordCheckbox" mnemonicParsing="false"
                      text="Show password?">
                <VBox.margin>
                    <Insets bottom="30.0" left="5.0"/>
                </VBox.margin>
                <font>
                    <Font name="JetBrainsMonoNL NFP Regular" size="14.0"/>
                </font>
            </CheckBox>
        </VBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
            <Button mnemonicParsing="false" onAction="#loginAction" text="Login">
                <font>
                    <Font name="JetBrainsMonoNL NFP Regular" size="14.0"/>
                </font>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#signupAction" text="Signup">
                <font>
                    <Font name="JetBrainsMonoNL NFP Regular" size="14.0"/>
                </font>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </padding>
            </Button>
        </HBox>
        <padding>
            <Insets bottom="20.0"/>
        </padding>
    </VBox>
    <stylesheets>
        <URL value="@../styles/login-style.css"/>
        <URL value="@../styles/default-style.css"/>
    </stylesheets>
</AnchorPane>
