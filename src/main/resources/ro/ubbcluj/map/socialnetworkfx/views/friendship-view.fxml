<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="850.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      fx:controller="ro.ubbcluj.map.socialnetworkfx.controllers.FriendshipController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <ComboBox fx:id="userComboBox" onAction="#userComboAction" prefWidth="400.0" promptText="Select a user">
        <VBox.margin>
            <Insets bottom="20.0" top="10.0"/>
        </VBox.margin>
    </ComboBox>

    <ListView fx:id="friendsListView" prefHeight="300.0" prefWidth="380.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </ListView>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
        <Button mnemonicParsing="false" onAction="#friendshipAdd" prefHeight="40.0" prefWidth="140.0" text="Add"
                textAlignment="CENTER">
            <font>
                <Font name="Inconsolata" size="14.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
        </Button>
        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#friendshipRemove" prefHeight="40.0"
                prefWidth="140.0" text="Remove" textAlignment="CENTER">
            <font>
                <Font name="Inconsolata" size="14.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
            </padding>
        </Button>
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </HBox>
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="100.0">
        <Label text="Friendship Requests">
            <font>
                <Font name="Ubuntu" size="24.0"/>
            </font>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
        </Label>
        <ListView fx:id="friendRequestsListView" prefHeight="400.0" prefWidth="200.0"/>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#friendshipAccept" text="Accept">
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#friendshipReject" text="Reject">
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </padding>
            </Button>
        </HBox>
    </VBox>
</VBox>
