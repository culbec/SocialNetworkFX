<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
      fx:controller="ro.ubbcluj.map.socialnetworkfx.controllers.AdminInterface.SendMessageController">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <ComboBox fx:id="senderCombo" onAction="#senderComboAction" prefWidth="400.0"
                  promptText="Select the sender"/>
        <ComboBox fx:id="receiverCombo" disable="true" onAction="#receiverComboAction" prefWidth="400.0"
                  promptText="Select the receiver"/>
    </VBox>
    <ListView fx:id="userListView" editable="true" prefHeight="300.0" prefWidth="500.0">
        <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0"/>
        </VBox.margin>
    </ListView>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
        <TextArea fx:id="messageTextArea" prefHeight="200.0" prefWidth="400.0"/>
        <Button mnemonicParsing="false" onAction="#sendAction" text="Send">
            <font>
                <Font size="14.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
        </Button>
        <Button layoutX="587.0" layoutY="41.0" mnemonicParsing="false" onAction="#resetAction" text="Reset">
            <font>
                <Font size="14.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
        </Button>
    </HBox>
</VBox>
