<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="460.0"
            prefWidth="1000.0" stylesheets="@../../styles/default-style.css" xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ro.ubbcluj.map.socialnetworkfx.controllers.UserInterface.MessageAreaController">
    <left>
        <VBox prefHeight="456.0" prefWidth="563.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="friendTableView" prefHeight="408.0" prefWidth="550.0">
                    <columns>
                        <TableColumn fx:id="firstNameColumn" prefWidth="155.0" text="First Name"/>
                        <TableColumn fx:id="lastNameColumn" prefWidth="203.0" text="Last Name"/>
                        <TableColumn fx:id="emailColumn" prefWidth="163.0" text="Email"/>
                    </columns>
                </TableView>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#previousPageAction" text="&lt;"/>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <TextField fx:id="numberOfFriends" onAction="#numberOfFriendsAction">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </TextField>
                                <Label text="Users per page"/>
                            </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#nextPageAction" text="&gt;"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
        </VBox>
    </left>
    <right>
        <VBox alignment="CENTER" prefHeight="456.0" prefWidth="450.0" spacing="30.0"
              BorderPane.alignment="BOTTOM_CENTER">
            <padding>
                <Insets left="10.0" right="20.0"/>
            </padding>
            <children>
                <ListView fx:id="messageListView" prefHeight="200.0" prefWidth="200.0"/>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="410.0" spacing="20.0">
                    <children>
                        <TextArea fx:id="messageTextArea" prefHeight="100.0" prefWidth="310.0"/>
                        <Button mnemonicParsing="false" onAction="#replyAction" text="Reply"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </right>
</BorderPane>
